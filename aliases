## Shell Commands
alias l='ls -Aoh --time-style=long-iso'

## Random
alias cfg='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias zshconfig="nvim ~/.zshrc"
alias reload="source $HOME/.zshrc"
alias my_ip="ipconfig getifaddr en0" # Need to come up with a way to get ip address that works on both linux and mac os
alias srv="python -m SimpleHTTPServer \$1" # Simple, but awesome python http server; If you're working with a static http page, you can use this to serve it rather than viewing the file directly in the browser; The final parameter allows you to specifiy a port

## VPN
alias vpnup="sudo vpnc concur.conf"
alias vpndown="sudo vpnc-disconnect"

## DNS Settings
alias dnsoffice="sudo cp /etc/resolvconf/resolv.conf.d/head_OFFICE /etc/resolvconf/resolv.conf.d/head && sudo resolvconf -u && sudo systemctl stop docker.service && sleep 2 && sudo systemctl start docker.service"
alias dnsnormal="sudo cp /etc/resolvconf/resolv.conf.d/head_ORIGINAL /etc/resolvconf/resolv.conf.d/head && sudo resolvconf -u && sudo systemctl stop docker.service && sleep 2 && sudo systemctl start docker.service"

